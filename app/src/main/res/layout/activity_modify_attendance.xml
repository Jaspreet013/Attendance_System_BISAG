<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyAttendanceActivity">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:textStyle="bold"
            android:text="Name"
            android:textAlignment="center"
            android:id="@+id/disp_user_name"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person ID : "
            android:textSize="20sp"
            android:id="@+id/disp_user_id"
            android:layout_below="@id/disp_user_name"/>
        <TextView
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/disp_user_email"
            android:text="Email : "
            android:textSize="20sp"
            android:layout_below="@+id/disp_user_id"/>
        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundMode="outline"
            android:layout_below="@+id/disp_user_email"
            android:layout_marginTop="45dp"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/border10"
            android:layout_centerHorizontal="true"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:boxCornerRadiusTopEnd="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_attendance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Attendance"
                android:inputType="number"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundMode="outline"
            android:layout_below="@+id/border10"
            android:layout_marginTop="15dp"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:id="@+id/border11"
            android:layout_centerHorizontal="true"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:boxCornerRadiusTopEnd="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_total_attendance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Enter Total Attendance"
                android:inputType="number"
                android:paddingLeft="15sp"
                android:paddingRight="15sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:shadowColor="#FFFFFF"
            android:layout_marginTop="65dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/update_attendance"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="Update Attendance"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/border11"
            android:background="@drawable/rounded_button"/>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>
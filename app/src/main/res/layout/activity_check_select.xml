<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckAttendanceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/select_subject_text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select an Event"
            android:textStyle="bold"
            android:textSize="45sp"/>

        <LinearLayout
            android:layout_below="@id/select_subject_text"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout4"
            android:orientation="vertical">

            <ListView
                android:layout_height="600dp"
                android:layout_width="match_parent"
                android:id="@+id/list_view3"
                android:layout_gravity="center_horizontal"
                android:nestedScrollingEnabled="true"/>
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_marginBottom="280dp"
                android:id="@+id/check_empty_message"
                android:textSize="20sp"
                android:text="Your events will display here once you create them"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>